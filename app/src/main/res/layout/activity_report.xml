<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_32"
        android:paddingHorizontal="16dp">

        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/black"
            android:src="@drawable/arrow_back" />

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="报表"
            android:textColor="#1D2129"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 搜索框 -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/bg_search"
            android:drawableStart="@drawable/ic_search"
            android:hint="搜索车辆"
            android:paddingHorizontal="16dp"
            android:textColor="#1D2129"
            android:textColorHint="#86909C"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 水平可滑动容器（复用Style） -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:scrollbars="none"
        android:overScrollMode="never">

        <!-- ChipGroup（复用Style，核心单选逻辑） -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:chipSpacing="8dp"
            android:paddingHorizontal="4dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMileage"
                style="@style/Widget.App.TabChip"
                android:text="里程查询"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chipAlarm"
                style="@style/Widget.App.TabChip"
                android:text="报警查询"/>
            <com.google.android.material.chip.Chip
                android:id="@+id/chipSafty"
                style="@style/Widget.App.TabChip"
                android:text="安全查询"/>
            <!-- 照片查询-->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipPhoto"
                style="@style/Widget.App.TabChip"
                android:text="照片查询"/>

            <!-- 过期查询（默认选中） -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipExpire"
                style="@style/Widget.App.TabChip"
                android:text="过期查询"
                android:checked="true"/>

            <!-- 停车统计 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipParking"
                style="@style/Widget.App.TabChip"
                android:text="停车统计"/>

            <!-- 加油报表 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipRefuel"
                style="@style/Widget.App.TabChip"
                android:text="加油报表"/>

            <!-- 油耗日报表 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipOilDaily"
                style="@style/Widget.App.TabChip"
                android:text="油耗日报表"/>

            <!-- 漏油报表 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipOilLeak"
                style="@style/Widget.App.TabChip"
                android:text="漏油报表"/>

            <!-- 离线提醒 -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipOffline"
                style="@style/Widget.App.TabChip"
                android:text="离线提醒"/>

        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- 时间筛选（昨天/今天/近三天/近一周） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:gravity="end|center_vertical"
        android:paddingEnd="@dimen/dp_24">

        <TextView
            android:id="@+id/tv_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨天"
            android:textColor="#1890FF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:text="今天"
            android:textColor="#4E5969"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_3days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:text="近三天"
            android:textColor="#4E5969"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_7days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:text="近一周"
            android:textColor="#4E5969"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 离线提醒的时间选择（仅离线标签显示） -->
    <LinearLayout
        android:id="@+id/llDateRange"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2026-02-03"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:text="-"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2026-02-20"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivClearDate"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_clear" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iv_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#f5f5f5"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_header_t1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="车牌号"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iv_header_t2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="日期"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/iv_header_t3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="里程"
            android:textColor="#333333"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- 内容容器 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" />

    <!-- 加载中/空数据/错误提示 -->
    <LinearLayout
        android:id="@+id/llEmpty"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvEmptyTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂无数据"
            android:textSize="16sp"
            android:textColor="@color/gray" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />
</LinearLayout>