<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#F5F7FA">

    <!-- 顶部导航栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_32"
        android:paddingHorizontal="16dp">

        <!-- 返回按钮 -->
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/black"
            android:src="@drawable/arrow_back" />

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="报表"
            android:textColor="#1D2129"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- 搜索框 -->
        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@drawable/bg_search"
            android:hint="搜索车辆"
            android:paddingHorizontal="16dp"
            android:textColor="#1D2129"
            android:textColorHint="#86909C"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Tab标签栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:horizontalSpacing="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tv_mileage"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_selected"
            android:gravity="center"
            android:text="里程查询"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_alarm"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_unselected"
            android:gravity="center"
            android:text="报警查询"
            android:textColor="#4E5969"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_safety"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_unselected"
            android:gravity="center"
            android:text="安全查询"
            android:textColor="#4E5969"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_photo"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_tab_unselected"
            android:gravity="center"
            android:text="照片查询"
            android:textColor="#4E5969"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 时间筛选栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="end"
        android:paddingEnd="@dimen/dp_24">

        <TextView
            android:id="@+id/tv_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昨天"
            android:textColor="#1890FF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:text="今天"
            android:textColor="#4E5969"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_3days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:text="近三天"
            android:textColor="#4E5969"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_7days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:text="近一周"
            android:textColor="#4E5969"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 内容容器（ViewPager2） -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1" />

</LinearLayout>