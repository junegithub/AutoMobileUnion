<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/fragment_title" />

    <!-- 证书标题区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/certificate_title"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/certificate_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/certificate_content"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 3. Tab栏（原Activity的TabLayout） -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        app:tabIndicatorColor="#2F67FF"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="0dp"
        app:tabSelectedTextColor="#2F67FF"
        app:tabTextColor="@color/black"
        app:tabTextAppearance="@style/TabTextStyle">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全教育" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="继续教育" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="岗前培训" />
    </com.google.android.material.tabs.TabLayout>

    <!-- 4. 月份选择栏（仅安全培训显示） -->
    <TextView
        android:id="@+id/tv_selected_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:visibility="gone"
        android:drawablePadding="@dimen/dp_4"
        android:layout_margin="@dimen/dp_8"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <!-- 5. 空状态提示 -->
    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂无培训记录"
        android:textColor="#999999"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:visibility="gone"/>

    <!-- 6. 共用的RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_study_prove"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="15dp"/>
</LinearLayout>