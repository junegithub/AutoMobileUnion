<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 地图视图 -->
    <com.amap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/bg_circle_alpha"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:text="轨迹回放"
            android:visibility="gone"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <!-- 分享按钮 -->
        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/btn_bg_radius_alpha"
            android:text="分享" />
    </LinearLayout>

    <!-- 停车点显示开关 -->
    <Switch
        android:id="@+id/switch_show_parking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="end"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/white"
        android:padding="@dimen/dp_8"
        android:background="@drawable/btn_bg_radius_alpha"
        android:text="停车点" />

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_sheet"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/switch_panel"
            android:src="@drawable/collapse"
            android:layout_gravity="end"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24" />

        <LinearLayout
            android:id="@+id/content_top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/rechoose_time_range"
                android:text="重设起始时间"
                android:textSize="@dimen/sp_16"
                android:drawableStart="@drawable/arrow_back"
                android:drawableTint="@color/blue"
                android:textColor="@color/blue"
                android:drawablePadding="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- 时间选择标签 -->
            <TextView
                android:text="播放时长："
                android:layout_weight="1"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:id="@+id/track_duration_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/tv_5min"
                    style="@style/TrackDurationRBStyle"
                    android:text="5分钟"
                    android:checked="true"/> <!-- 默认选中 -->

                <!-- 今天 -->
                <RadioButton
                    android:id="@+id/tv_15min"
                    style="@style/TrackDurationRBStyle"
                    android:layout_marginStart="@dimen/dp_4"
                    android:text="15分钟"/>
            </RadioGroup>
        </LinearLayout>
        <!-- 1. 车牌号 -->
        <TextView
            android:id="@+id/tv_car_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="#000000"
            android:textSize="12sp" />

        <!-- 2. 第一行数据：速度 + GPS状态 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_gps_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 3. 第二行数据：定位时间 + 通讯时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_location_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_communication_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 4. 起始位置 -->
        <TextView
            android:id="@+id/tv_start_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="#333333"
            android:textSize="12sp" />

        <!-- 5. 结束位置 -->
        <TextView
            android:id="@+id/tv_end_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="#333333"
            android:textSize="12sp" />

        <!-- 6. 开始时间 -->
        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="#333333"
            android:textSize="12sp" />

        <!-- 7. 结束时间 -->
        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="#333333"
            android:textSize="12sp" />

        <!-- 8. 第三行数据：行车时长 + 最高时速 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_driving_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_max_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 9. 第四行数据：停车时长 + 平均时速 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_parking_duration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_avg_speed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="#333333"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- 10. 行驶总里程 -->
        <TextView
            android:id="@+id/tv_total_mileage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textColor="#333333"
            android:textSize="12sp" />

        <!-- 11. 进度条区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_8">

            <!-- 暂停图标 -->
            <ImageView
                android:id="@+id/iv_play_pause"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/track_pause" />

            <!-- 进度条 -->
            <SeekBar
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/dp_8"
                android:progressTint="@color/blue"
                android:backgroundTint="@color/blue_light"
                android:max="100"
                android:progress="0" />
        </LinearLayout>
        <!-- 播放速度控制 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal"
            android:radius="12dp">

            <TextView
                android:id="@+id/tv_speed_slow"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:radius="10dp"
                android:text="慢"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_speed_normal"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:background="@android:color/holo_blue_light"
                android:gravity="center"
                android:radius="10dp"
                android:text="正常"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_speed_fast"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:gravity="center"
                android:radius="10dp"
                android:text="快"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/time_choose_container"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</FrameLayout>