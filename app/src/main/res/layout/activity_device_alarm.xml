<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <FrameLayout
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginTop="@dimen/dp_32"
        android:padding="@dimen/padding_10">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_back"
            app:tint="@color/black" /> <!-- 自行添加返回箭头图标 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:text="@string/device_alarm"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_title"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- 筛选栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_15"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- 全部报警下拉Spinner -->
        <Spinner
            android:id="@+id/spinner_alarm_type"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/margin_10"
            android:layout_weight="1"
            android:background="@drawable/bg_spinner"
            android:entries="@array/alarm_types"
            android:gravity="center"
            android:popupBackground="@color/bg_white"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_company" />

        <!-- 日期选择TextView -->
        <TextView
            android:id="@+id/tv_date_range"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/bg_date_text"
            android:gravity="center"
            android:text="@string/date_range"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_company" />
    </LinearLayout>

    <!-- 报警列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_alarm_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/margin_15" />

</LinearLayout>