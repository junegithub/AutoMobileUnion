<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- 标题栏 -->
    <FrameLayout
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/title_bar_height"
        android:layout_marginTop="@dimen/dp_32"
        android:padding="@dimen/padding_10">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_back"
            app:tint="@color/black" /> <!-- 自行添加返回箭头图标 -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:text="@string/operation_analysis"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_title"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- 分割线 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_gray"/>

    <!-- 第一个模块：当前车辆运营情况 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_horizontal"
        android:paddingTop="@dimen/margin_vertical">

        <!-- 模块标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vehicle_operation"
            android:textColor="@color/text_black"
            android:textSize="@dimen/module_title_size"/>

        <!-- 饼图（实心圆） -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_vehicle"
            android:layout_width="@dimen/pie_chart_size"
            android:layout_height="@dimen/pie_chart_size"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_vertical"/>
    </LinearLayout>

    <!-- 第二个模块：报警分布情况 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_horizontal"
        android:paddingTop="@dimen/margin_vertical">

        <!-- 模块标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alarm_distribution"
            android:textColor="@color/text_black"
            android:textSize="@dimen/module_title_size"/>

        <!-- 饼图（实心圆） -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart_alarm"
            android:layout_width="@dimen/pie_chart_size"
            android:layout_height="@dimen/pie_chart_size"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_vertical"/>
    </LinearLayout>

</LinearLayout>