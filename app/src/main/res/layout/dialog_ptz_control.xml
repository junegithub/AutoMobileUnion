<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ptz_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通道1--云台控制"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EEEEEE"/>

    <!-- 控制区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <!-- 方向控制 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_up"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_up_blue"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_left"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_left_blue"
                    android:layout_marginEnd="40dp"/>

                <ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_right_blue"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_down"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_down_blue"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- 参数控制 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <!-- 标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="焦距"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="光圈"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="变倍"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="补光/雨刷"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!-- 增加按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/iv_focal_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_focal_add"/>

                <ImageView
                    android:id="@+id/iv_aperture_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_aperture_add"/>

                <ImageView
                    android:id="@+id/iv_multiplier_add"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_multiplier_add"/>

                <ImageView
                    android:id="@+id/iv_wiper"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_wiper"/>
            </LinearLayout>

            <!-- 减少按钮 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/iv_focal_minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_focal_minus"/>

                <ImageView
                    android:id="@+id/iv_aperture_minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_aperture_minus"/>

                <ImageView
                    android:id="@+id/iv_multiplier_minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_multiplier_minus"/>

                <ImageView
                    android:id="@+id/iv_light"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_light"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 速度控制 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="速度"
            android:textSize="14sp"/>

        <ImageView
            android:id="@+id/iv_speed_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_add"
            android:layout_marginHorizontal="16dp"/>

        <TextView
            android:id="@+id/tv_speed_value"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_speed_minus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_plus"
            android:layout_marginHorizontal="16dp"/>
    </LinearLayout>

</LinearLayout>