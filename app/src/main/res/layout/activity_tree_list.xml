<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- 顶部搜索栏（保留原有样式） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_48"
        android:padding="8dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_back"
            app:tint="@color/black" /> <!-- 自行添加返回箭头图标 -->

        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="请输入关键字"
            android:background="@drawable/bg_search"
            android:layout_marginStart="@dimen/dp_8"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_search_execute"
            android:text="搜索"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <Button
            android:id="@+id/btn_car_count"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/btn_bg_blue"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginLeft="8dp"/>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:background="@color/light_gray" />

    <!-- 替换为TabLayout（替代原自定义标签栏） -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:background="@color/white"
        app:tabIndicatorColor="@color/tab_selected"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/tab_selected"
        android:visibility="gone"
        app:tabTextColor="@color/gray_600"
        app:tabGravity="fill"
        app:tabMode="fixed"/>

    <!-- 替换为Spinner（替代原筛选按钮） -->
    <Spinner
        android:id="@+id/spinner_filter"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_32"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/label_bg"
        android:paddingHorizontal="@dimen/dp_12"
        android:paddingVertical="@dimen/dp_4"
        android:popupBackground="@color/white"
        android:visibility="gone"
        android:spinnerMode="dropdown"/>

    <!-- 车牌号列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_carnum_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/dp_16"
        android:paddingTop="@dimen/dp_12"/>

    <!-- 动态树形列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tree_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"/>

</LinearLayout>