<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <!-- 内部内容容器：替换原LinearLayout，间距更精准 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp">

            <!-- 背景图 -->
            <ImageView
                android:id="@+id/iv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToOutline="true"
                android:outlineProvider="background"
                android:scaleType="centerCrop"
                android:src="@drawable/safety_training" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <!-- 已完成按钮 -->
                <Button
                    android:id="@+id/btn_completed"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_centerVertical="true"
                    android:backgroundTint="#4A90E2"
                    android:text="已完成"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:cornerRadius="20dp" />

                <!-- 考试已通过按钮 -->
                <Button
                    android:id="@+id/btn_exam_passed"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:backgroundTint="#34C759"
                    android:text="考试已通过"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:cornerRadius="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <!-- 开始学习按钮 -->
                <Button
                    android:id="@+id/btn_start_study"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/dp_48"
                    android:backgroundTint="#FF9500"
                    android:text="开始学习"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:cornerRadius="20dp" />

                <!-- 开始考试按钮 -->
                <Button
                    android:id="@+id/btn_start_exam"
                    android:layout_width="120dp"
                    android:layout_height="@dimen/dp_48"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:backgroundTint="#34C759"
                    android:text="开始考试"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:cornerRadius="20dp" />
            </LinearLayout>
        </FrameLayout>

        <!-- 标题 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:text="2026年2月日常安全培训"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- 进度 -->
        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            android:text="学习进度:100%"
            android:textColor="#007AFF"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>