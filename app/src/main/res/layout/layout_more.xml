<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:visibility="gone"
    android:padding="@dimen/dp_16">

    <!-- 1. 分享至微信 -->
    <TextView
        android:id="@+id/tv_wechat"
        style="@style/FunctionBtnStyle"
        android:text="分享至微信"
        android:drawableTop="@drawable/ic_wechat" /> <!-- 顶部图标 -->

    <!-- 2. 导航 -->
    <TextView
        android:id="@+id/tv_navigation"
        style="@style/FunctionBtnStyle"
        android:text="导航"
        android:drawableTop="@drawable/ic_nav" />

    <!-- 3. 呼叫 -->
    <TextView
        android:id="@+id/tv_call"
        style="@style/FunctionBtnStyle"
        android:text="呼叫"
        android:drawableTop="@drawable/ic_call" />

    <!-- 4. 下发文字 -->
    <TextView
        android:id="@+id/tv_sendtext"
        style="@style/FunctionBtnStyle"
        android:text="下发文字"
        android:drawableTop="@drawable/ic_send_text" />

    <!-- 5. 拍照 -->
    <TextView
        android:id="@+id/tv_take_photo"
        style="@style/FunctionBtnStyle"
        android:text="拍照"
        android:drawableTop="@drawable/ic_take_photo" />

</LinearLayout>