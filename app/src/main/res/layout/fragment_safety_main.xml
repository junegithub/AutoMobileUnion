<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 顶部导航栏 -->
                <LinearLayout
                    android:id="@+id/top_nav"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="?attr/colorSurface">

                    <!-- 头像+姓名 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_avatar"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="郭祥磊"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnSurface"/>
                    </LinearLayout>

                    <!-- 行车日志 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_driving_log"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="行车日志"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnSurface"/>
                    </LinearLayout>

                    <!-- 车辆安全检查 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_vehicle_check"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="车辆安全检查"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnSurface"/>
                    </LinearLayout>

                    <!-- 隐患排查 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_hazard_check"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="隐患排查"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:textColor="?attr/colorOnSurface"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 日常安全培训卡片 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/training_card"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/bg_training_card"
                    app:layout_constraintTop_toBottomOf="@id/top_nav">

                    <!-- 左侧文字 -->
                    <TextView
                        android:id="@+id/training_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="日常安全培训"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="12dp"/>

                    <TextView
                        android:id="@+id/training_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="江西6月\n九江市\n道路普通货物运输"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        app:layout_constraintStart_toStartOf="@id/training_title"
                        app:layout_constraintTop_toBottomOf="@id/training_title"/>

                    <!-- 开始学习按钮 -->
                    <Button
                        android:id="@+id/btn_start_learn"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:text="开始学习"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:background="@drawable/bg_start_learn"
                        android:padding="0dp"
                        app:layout_constraintStart_toStartOf="@id/training_info"
                        app:layout_constraintTop_toBottomOf="@id/training_info"/>

                    <!-- 未完成标签 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_unfinished"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="12dp">

                        <TextView
                            android:id="@+id/tvUnfinishedCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3个"
                            android:textSize="14sp"
                            android:textColor="#FF6666"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginStart="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="未完成"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tvUnfinishedCount"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 5件待办标题 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/todo_title_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    app:layout_constraintTop_toBottomOf="@id/training_card">

                    <TextView
                        android:id="@+id/todo_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5件待办："
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnBackground"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/todo_learn_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="学习记录>"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 待办列表容器 -->
                <LinearLayout
                    android:id="@+id/todoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    app:layout_constraintTop_toBottomOf="@id/todo_title_bar"/>

                <!-- 安全会议模块 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/meetingCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:layout_constraintTop_toBottomOf="@id/todoContainer"
                    android:background="?attr/colorSurface"
                    android:padding="8dp"
                    android:elevation="2dp">

                    <TextView
                        android:id="@+id/meeting_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="安全会议"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/meeting_countdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3天2小时23分钟后开始"
                        android:textSize="14sp"
                        android:textColor="#FF6666"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/meeting_title"/>

                    <TextView
                        android:id="@+id/meeting_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="嘉祥全顺运输有限公司 嘉祥全顺运输有限公司晨会 2023-06-11 00:00:00到嘉祥全顺运输有限公司参会。2023-06-11 00:00:00签签到，2023-06-11 00:00:00签退。"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/meeting_title"
                        android:layout_marginTop="4dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 功能按钮区 -->
                <LinearLayout
                    android:id="@+id/function_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="12dp"
                    app:layout_constraintTop_toBottomOf="@id/meetingCard">

                    <!-- 从业资格考试真题 -->
                    <LinearLayout
                        android:id="@+id/btnExamTrue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_exam_true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="从业资格\n考试真题"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- 两类人员真题 -->
                    <LinearLayout
                        android:id="@+id/btnTwoPerson"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_two_person"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="两类人员\n真题"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- 继续教育 -->
                    <LinearLayout
                        android:id="@+id/btnContinueEdu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ic_continue_edu"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="继续教育"
                            android:textSize="12sp"
                            android:textColor="?attr/colorOnBackground"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 底部信息 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    app:layout_constraintTop_toBottomOf="@id/function_buttons"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="©山东易车联电子科技有限公司"
                        android:textSize="12sp"
                        android:textColor="#999999"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客服电话：0535-4971763"
                        android:textSize="12sp"
                        android:textColor="#999999"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>