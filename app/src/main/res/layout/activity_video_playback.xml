<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 自定义导航栏 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_32"
        android:padding="@dimen/dp_8">

        <!-- 返回按钮 -->
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_arrow_left"
            android:text="返回"
            android:textSize="16sp" />

        <!-- 标题 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="视频回放"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

    <!-- 主内容区域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:orientation="vertical">

            <!-- 选择车辆 -->
            <LinearLayout
                android:id="@+id/ll_select_car"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="选择车辆:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_car_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="粤A12345"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 开始时间 -->
            <LinearLayout
                android:id="@+id/ll_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="开始时间:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2026-02-27 00:00:00"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 结束时间 -->
            <LinearLayout
                android:id="@+id/ll_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="结束时间:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_end_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2026-02-27 15:30:00"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 时间快捷选择按钮（RecyclerView版） -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_time_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8"
                android:nestedScrollingEnabled="false"/>

            <!-- 视频通道选择 -->
            <LinearLayout
                android:id="@+id/ll_channel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="视频通道:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_channel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="所有通道"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 码流通道选择 -->
            <LinearLayout
                android:id="@+id/ll_stream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="码流通道:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_stream"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="所有码流"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 存储类型选择 -->
            <LinearLayout
                android:id="@+id/ll_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="存储类型:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_storage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="所有存储器"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 资源类型选择 -->
            <LinearLayout
                android:id="@+id/ll_media"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="资源类型:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:drawablePadding="@dimen/dp_8"
                    android:text="音视频"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- 查询按钮 -->
            <TextView
                android:id="@+id/btn_query"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:text="查询"
                android:gravity="center"
                android:layout_margin="@dimen/dp_16"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_video_playback_selector"/>
        </LinearLayout>
    </ScrollView>

    <!-- 隐藏的WebView -->
    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>