<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 高德地图视图 -->
    <com.amap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tip_bar"/>

    <!-- 黄色提示条 -->
    <TextView
        android:id="@+id/tip_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF59D"
        android:text="默认仅显示您最近搜索过的5辆车，查找其他车辆请使用底部的搜索功能"
        android:textSize="12sp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mapView"
        app:layout_constraintBottom_toTopOf="@+id/search_bar"/>

    <!-- 搜索栏 -->
    <LinearLayout
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tip_bar"
        app:layout_constraintBottom_toTopOf="@+id/plate_recycler">
        <EditText
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="车牌/机构名"
            android:background="@drawable/shape_edittext"
            android:padding="8dp"/>
        <Button
            android:id="@+id/btn_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:background="@drawable/shape_btn_blue"/>
    </LinearLayout>

    <!-- 车牌横向滚动栏 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plate_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/search_bar"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- 右侧功能按钮组 -->
    <LinearLayout
        android:id="@+id/fun_btns_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageButton
            android:id="@+id/btn_my"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/shape_btn_my"/>
        <ImageButton
            android:id="@+id/btn_alarm"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/shape_btn_alarm"/>
        <ImageButton
            android:id="@+id/btn_status"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/shape_btn_status"/>
        <ImageButton
            android:id="@+id/btn_trend"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/shape_btn_trend"/>
        <ImageButton
            android:id="@+id/btn_report"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/shape_btn_report"/>
        <ImageButton
            android:id="@+id/btn_setting"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/shape_btn_setting"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>