<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/calendar_cell_size"
    android:layout_height="@dimen/calendar_cell_size">

    <!-- 范围背景 -->
    <View
        android:id="@+id/v_range_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_calendar_range"
        android:visibility="gone"/>

    <!-- 选中圆形背景 -->
    <View
        android:id="@+id/v_selected_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_calendar_selected"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <!-- 日期文字 -->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="1"
        android:textSize="@dimen/date_text_size"
        android:textColor="@color/calendar_text_black"
        android:gravity="center"
        android:layout_centerInParent="true"/>

    <!-- 开始/结束标签 -->
    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start"
        android:textSize="@dimen/date_label_size"
        android:textColor="@color/calendar_bg_white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>