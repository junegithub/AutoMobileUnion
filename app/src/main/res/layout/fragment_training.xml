<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_20"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/ll_top_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="end"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="易智学室"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/training_home_ring"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:src="@drawable/ring"/>

            <ImageView
                android:id="@+id/training_home_user"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_marginStart="@dimen/dp_16"
                android:src="@drawable/training_avatar"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cv_safe_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/training_bg"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintTop_toBottomOf="@id/ll_top_icon">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/safe_training"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_20"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_4"
                    android:background="@drawable/btn_bg_round_rectangle"
                    android:layout_marginStart="@dimen/dp_12"
                    android:text="@string/month_2"
                    android:textColor="@color/primary_purple"
                    android:textSize="@dimen/sp_12"/>

            </LinearLayout>
            <TextView
                android:id="@+id/training_home_learn"
                android:layout_width="80dp"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_16"
                android:gravity="center"
                android:text="@string/btn_start_learn"
                android:background="@drawable/btn_bg_radius"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/sp_14"/>
        </LinearLayout>

        <GridLayout
            android:id="@+id/grid_exam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            app:layout_constraintTop_toBottomOf="@id/cv_safe_training">

            <androidx.cardview.widget.CardView
                android:id="@+id/training_home_exam_past"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/dp_8"
                app:cardCornerRadius="@dimen/radius_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_8">

                    <ImageView
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:src="@drawable/ic_question_training"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exam1"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp_14"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/btn_start_learn"
                            android:drawableEnd="@drawable/start_orange"
                            android:textColor="@color/red_dot"
                            android:textSize="@dimen/sp_12"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/training_home_exam_meeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/dp_8"
                app:cardCornerRadius="@dimen/radius_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_8">

                    <ImageView
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:src="@drawable/ic_safe"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exam2"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp_14"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/btn_start_learn"
                            android:drawableEnd="@drawable/start_green"
                            android:textColor="@color/green_dot"
                            android:textSize="@dimen/sp_12"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/training_home_exam_continue_edu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/dp_8"
                app:cardCornerRadius="@dimen/radius_8">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_8">

                    <ImageView
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:src="@drawable/ic_subject"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exam3"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp_14"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/btn_start_learn"
                            android:drawableEnd="@drawable/start_orange"
                            android:textColor="@color/red_dot"
                            android:textSize="@dimen/sp_12"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/training_home_exam_qualify_past"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="@dimen/dp_8"
                app:cardCornerRadius="@dimen/radius_8">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_8">

                    <ImageView
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:src="@drawable/ic_test" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exam4"
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp_14" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:text="@string/btn_start_exam"
                            android:drawableEnd="@drawable/start_orange"
                            android:textColor="@color/red_dot"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </GridLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/pre_training"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/grid_exam"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            app:cardCornerRadius="@dimen/radius_8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_16">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/ic_before"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:text="@string/pre_training"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_16" />
                <TextView
                    android:id="@+id/training_home_pre_training_learn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_start_learn"
                    android:drawableEnd="@drawable/start_blue"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_12" />
                <TextView
                    android:id="@+id/training_home_pre_training_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_start_exam"
                    android:layout_marginStart="@dimen/dp_8"
                    android:drawableEnd="@drawable/start_blue"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/safe_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/pre_training"
            android:layout_margin="@dimen/dp_16"
            app:cardCornerRadius="@dimen/radius_8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/safe_manage"
                    android:textStyle="bold"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp_20"/>

                <GridLayout
                    android:id="@+id/grid_safe_manage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:columnCount="3"
                    android:rowCount="2">

                    <TextView
                        android:id="@+id/training_home_driving_log"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:drawablePadding="@dimen/dp_4"
                        android:drawableTop="@drawable/ic_order_training"
                        android:layout_margin="@dimen/dp_8"
                        android:text="@string/driving_log"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:id="@+id/training_home_safety_check"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:drawablePadding="@dimen/dp_4"
                        android:drawableTop="@drawable/ic_report_training"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/car_check"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:id="@+id/training_home_inspect"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:drawablePadding="@dimen/dp_4"
                        android:drawableTop="@drawable/ic_warning_training"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/hazard_check"
                        android:textSize="@dimen/sp_12"/>

                    <TextView
                        android:id="@+id/training_home_duty"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:drawablePadding="@dimen/dp_4"
                        android:drawableTop="@drawable/ic_device_training"
                        android:layout_marginTop="@dimen/dp_8"
                        android:text="@string/driver_duty"
                        android:textSize="@dimen/sp_12"/>
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/training_home_find_job"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_64"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/btn_blue_radius"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:drawableEnd="@drawable/ic_training_arrow_right"
            app:layout_constraintTop_toBottomOf="@id/safe_manage"
            android:text="@string/recruitment"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>