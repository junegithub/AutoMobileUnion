<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 透明背景层（占满整个扫码框） -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>

    <!-- 左上角横线（水平） -->
    <item
        android:width="20dp"
        android:height="2dp"
        android:gravity="top|left">
        <shape android:shape="rectangle">
            <solid android:color="#2F80ED"/> <!-- 截图同款蓝色 -->
        </shape>
    </item>
    <!-- 左上角竖线（垂直） -->
    <item
        android:width="2dp"
        android:height="20dp"
        android:gravity="top|left">
        <shape android:shape="rectangle">
            <solid android:color="#2F80ED"/>
        </shape>
    </item>

    <!-- 右上角横线（水平） -->
    <item
        android:width="20dp"
        android:height="2dp"
        android:gravity="top|right">
        <shape android:shape="rectangle">
            <solid android:color="#2F80ED"/>
        </shape>
    </item>
    <!-- 右上角竖线（垂直） -->
    <item
        android:width="2dp"
        android:height="20dp"
        android:gravity="top|right">
        <shape android:shape="rectangle">
            <solid android:color="#2F80ED"/>
        </shape>
    </item>

    <!-- 左下角横线（水平） -->
    <item
        android:width="20dp"
        android:height="2dp"
        android:gravity="bottom|left">
        <shape android:shape="rectangle">
            <solid android:color="#2F80ED"/>
        </shape>
    </item>
    <!-- 左下角竖线（垂直） -->
    <item
        android:width="2dp"
        android:height="20dp"
        android:gravity="bottom|left">
        <shape android:shape="rectangle">
            <solid android:color="#2F80ED"/>
        </shape>
    </item>

    <!-- 右下角横线（水平） -->
    <item
        android:width="20dp"
        android:height="2dp"
        android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <solid android:color="#2F80ED"/>
        </shape>
    </item>
    <!-- 右下角竖线（垂直） -->
    <item
        android:width="2dp"
        android:height="20dp"
        android:gravity="bottom|right">
        <shape android:shape="rectangle">
            <solid android:color="#2F80ED"/>
        </shape>
    </item>
</layer-list>