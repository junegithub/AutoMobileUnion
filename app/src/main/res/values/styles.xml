<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.AmapBottomTabDemo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- 底部Tab选中颜色 -->
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView.Colored</item>
    </style>

    <style name="homeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:text">@string/status</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:drawablePadding">@dimen/dp_4</item>
    </style>

    <!-- 自定义BottomSheetDialogFragment的主题 -->
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <!-- 核心：重写BottomSheet的基础样式 -->
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <!-- 可选：去除背景蒙层（默认半透明黑），如需保留则删除此属性 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 可选：设置蒙层透明度（0~1，0完全透明，1完全不透明） -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- 自定义BottomSheet的具体样式 -->
    <style name="CustomBottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <!-- 关键：设置自定义背景Drawable -->
        <item name="android:background">@drawable/bg_bottom_sheet</item>
        <!-- 可选：去除默认背景着色（避免Material库默认的颜色覆盖） -->
        <item name="android:backgroundTint">@null</item>
        <!-- 可选：设置BottomSheet的最小高度/最大高度 -->
        <item name="android:minHeight">200dp</item>
    </style>

    <!-- 通用信息项样式：提取公共属性，减少重复代码 -->
    <style name="InfoItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="InfoItemValue" parent="InfoItemLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">#333333</item>
    </style>

    <!-- 功能按钮公共样式 -->
    <style name="FunctionBtnStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/dp_8</item> <!-- 图标文字间距 -->
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- 设备状态条目容器样式：统一高度、对齐方式 -->
    <style name="CarStatusItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>

    <!-- 状态标题文本样式：统一字号、颜色 -->
    <style name="CarStatusTitle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- 状态数值文本样式：统一字号、颜色 -->
    <style name="CarStatusCount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:drawablePadding">@dimen/dp_8</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
    </style>

    <!-- Tab文字样式-选中 -->
    <style name="TabTextSelectedStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item> <!-- 粗体 -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Tab文字样式-未选中 -->
    <style name="TabTextUnselectedStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#999999</item> <!-- 灰色 -->
        <item name="android:textStyle">normal</item> <!-- 常规字体 -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- 核心：提取Tab Chip的统一样式 -->
    <style name="Widget.App.TabChip" parent="Widget.MaterialComponents.Chip.Choice">
        <!-- 尺寸相关 -->
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <!-- 圆角（匹配设计） -->
        <item name="chipCornerRadius">8dp</item>
        <!-- 内边距（左右24dp，上下0） -->
        <item name="chipStartPadding">@dimen/dp_8</item>
        <item name="chipEndPadding">@dimen/dp_8</item>
        <!-- 取消边框 -->
        <item name="chipStrokeWidth">0dp</item>
        <!-- 隐藏选中对勾图标 -->
        <item name="checkedIconEnabled">false</item>
        <item name="android:textColor">@color/selector_chip_text</item>
        <!-- 背景和文字颜色（关联选择器） -->
        <item name="chipBackgroundColor">@color/selector_chip_bg</item>
        <!-- 点击反馈（可选，提升交互） -->
        <item name="rippleColor">@android:color/transparent</item>
    </style>

    <style name="ReportItemBg">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/item_divider_bg</item>
    </style>

    <style name="ReportItemTV">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- 车辆信息行标签文字样式 -->
    <style name="CarInfoLabelText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- 车辆信息行值文字样式 -->
    <style name="CarInfoValueText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- 分割线样式 -->
    <style name="CarInfoDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <!-- Tab文字样式 -->
    <style name="TabTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TrainingProfileItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawableStart">@drawable/ic_lock</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
        <item name="android:drawablePadding">@dimen/dp_16</item>
        <item name="android:paddingLeft">@dimen/dp_16</item>
        <item name="android:paddingRight">@dimen/dp_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- 时间筛选RadioButton样式 -->
    <style name="TimeFilterRadioButtonStyle">
        <!-- 基础属性 -->
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>

        <!-- 隐藏默认圆形按钮 -->
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_quick_option</item>

        <!-- 文字颜色随选中态变化 -->
        <item name="android:textColor">@color/selector_quick_time_text</item>
    </style>

    <!-- 时间筛选RadioButton样式 -->
    <style name="TrackDurationRBStyle">
        <!-- 基础属性 -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>

        <!-- 隐藏默认圆形按钮 -->
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/item_track_duration</item>

        <!-- 文字颜色随选中态变化 -->
        <item name="android:textColor">@color/selector_quick_time_text</item>
    </style>
</resources>